№35 
import numpy as np

# Сформировать матрицу A[7,4] с помощью генератора случайных чисел
A = np.random.randint(-10, 10, size=(7, 4))

# Вывести матрицу A
print("Исходная матрица A:")
print(A)

# Сформировать одномерный массив из сумм положительных элементов каждой строки матрицы
positive_sums = np.sum(A > 0, axis=1)

# Вывести одномерный массив
print("\nОдномерный массив из сумм положительных элементов каждой строки матрицы:")
print(positive_sums)

№36
import numpy as np

# Сформировать матрицу A(М,N) с помощью генератора случайных чисел
M = int(input("Введите количество строк матрицы: "))
N = int(input("Введите количество столбцов матрицы: "))
A = np.random.randint(1, 10, size=(M, N))

# Вывести матрицу A
print("Исходная матрица A:")
print(A)

# Сформировать одномерный массив из средних арифметических каждого столбца матрицы
column_means = np.mean(A, axis=0)

# Вывести одномерный массив
print("\nОдномерный массив из средних арифметических каждого столбца матрицы:")
print(column_means)

№37
import numpy as np

# Сформировать матрицу A(M,M) с помощью генератора случайных чисел
M = int(input("Введите количество строк и столбцов матрицы: "))
A = np.random.randint(-10, 10, size=(M, M))

# Вывести матрицу A
print("Исходная матрица A:")
print(A)

# Сформировать одномерный массив из количеств ненулевых элементов каждой строки матрицы
nonzero_counts = np.count_nonzero(A, axis=1)

# Вывести одномерный массив
print("\nОдномерный массив из количеств ненулевых элементов каждой строки матрицы:")
print(nonzero_counts)

№38
import numpy as np

# Сформировать матрицу В(M,M) с помощью генератора случайных чисел
M = int(input("Введите количество строк и столбцов матрицы: "))
B = np.random.randint(-10, 10, size=(M, M))

# Вывести матрицу B
print("Исходная матрица B:")
print(B)

# Сформировать одномерный массив из произведений отрицательных элементов каждого столбца матрицы
negative_products = np.prod(B[B < 0], axis=0)

# Вывести одномерный массив
print("\nОдномерный массив из произведений отрицательных элементов каждого столбца матрицы:")
print(negative_products)

№39
import numpy as np

# Сформировать матрицу A(M,M) с помощью генератора случайных чисел
M = int(input("Введите количество строк и столбцов матрицы: "))
A = np.random.randint(-10, 10, size=(M, M))

# Вывести матрицу A
print("Исходная матрица A:")
print(A)

# Сформировать одномерный массив из минимальных элементов каждой строки матрицы
min_values = np.min(A, axis=1)

# Вывести одномерный массив
print("\nОдномерный массив из минимальных элементов каждой строки матрицы:")
print(min_values)

№40
import numpy as np

# Сформировать матрицу A с помощью генератора случайных чисел
A = np.random.randint(-10, 10, size=(5, 5))

# Вывести матрицу A
print("Исходная матрица A:")
print(A)

# Сформировать одномерный массив из количеств ненулевых элементов каждой строки матрицы
nonzero_counts = np.count_nonzero(A, axis=1)

# Вывести одномерный массив
print("\nОдномерный массив из количеств ненулевых элементов каждой строки матрицы:")
print(nonzero_counts)
